<h1>All Listing</h1>
<table border="1">
<tr>
<th>NO.</th>
<th>Title</th>
<th>Amount of People</th>
<th>Amenities</th>
</tr>
<% @listings.each_with_index do |l, index| %>
<tr>
  <td><%= index + 1%></td>
  <td><%= link_to l.title, listing_path(l) %></td>
  <td><%= l.amount %></td>
  <td><%= l.amenities%></td>
  <td><%= l.user.email %></td>
  <td>
  <% if l.user.id == current_user.id %>
  <%= link_to "Edit", edit_listing_path(l) %>
    <%end%>
  </td>
  <td>
  <% if l.user.id == current_user.id %>
  <%= link_to "Delete", listing_path(l), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
    <%end%>
    </td>
</tr>
<% end %>
</table>
<%= paginate @listings %>
<%= page_entries_info @listings %>