<div class="list-center">
<h1>All Listing</h1>
<table class="table-bordered">
<thead>
<tr>

<th>By</th>
<th>Edit</th>
<th>Delete</th>
</tr>
</thead>
<tbody>
<% @listings.each_with_index do |l, index| %>
<tr>
  <td>
  <%= link_to l.title, listing_reservations_path(l) %>
  </td>
  <td>
  <%= l.amount %>
  </td>
  <td>
  <%= l.amenities%>
  </td>
  <td>
  RM <%= l.price%>
  </td>
  <td>
  <%= link_to l.user.email, listing_reservations_path(l) %>
  </td>
  <td>
  <% if l.user.id == current_user.id %>
  <%= link_to "Edit", edit_listing_path(l) %>
    <%end%>
    </td>
  <td>
  <% if l.user.id == current_user.id %>
  <%= link_to "Delete", listing_path(l), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
  </td>
    <%end%>
</tr>
<% end %>
</tbody>
</table>
<%= paginate @listings %>
<%= page_entries_info @listings %>
</div>